# Ghostty config
# ==========================

mouse-hide-while-typing = true
font-family = JetBrains Mono 
font-size = 14

theme =  Nord 

# Background 

  background = "#000000"
  background-opacity = 0.8

# Remove Close Pop-up
confirm-close-surface = false

# Keybinds
keybind = ctrl+j=scroll_page_fractional:0.5
keybind = ctrl+k=scroll_page_fractional:-0.5
keybind = ctrl+shift+comma=unbind

# Example: sets top padding to 5px, bottom padding to 0px
window-padding-y = "0,0"
window-padding-color = "extend"
