{
    "layer": "top",
    "output": ["*"],
    "height": 10,
    "exclusive": true,
    "passthrough": false,
    "reload_style_on_change": true,
    "include": [
        "$XDG_CONFIG_HOME/waybar/modules/*json*",
        "$XDG_CONFIG_HOME/waybar/includes/includes.json"
    ],

    "modules-left": [
        "group/pill#left1",
        "group/pill#left2",
    ],
    "group/pill#left1": {
        "modules": [
            "hyprland/workspaces",
        ],
        "orientation": "inherit",
    },
    "group/pill#left2": {
        "orientation": "inherit",
        "modules": [
            "memory",
            "cpu",
            "custom/cpuinfo",
            "custom/gpuinfo",
      ]
    },

    "modules-center": [
        "group/pill#center"
    ],
    "group/pill#center": {
        "modules": [
            "custom/hyprsunset",
            "clock",
            "idle_inhibitor",
        ],
        "orientation": "inherit"
    },

    "modules-right": [
        "group/pill#right1",
        "group/pill#right2",
    ],
    "group/pill#right1": {
        "modules": [
            "mpris",
            "pulseaudio",
            "pulseaudio#microphone",
        ],
        "orientation": "inherit"
  },
    "group/pill#right2": {
        "modules": [
            "group/hide-tray",
            "battery",
            "custom/updates",
            "custom/dunst",
            "custom/hyde-menu",
            "custom/power"
        ],
        "orientation": "inherit"
    },

    "clock": {
        "format": "{:%a, %b-%d %I:%M%p}"
    },

    "idle_inhibitor": {
        "start-activated": true
    }
}

